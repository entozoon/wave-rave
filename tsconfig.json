{
  "compilerOptions": {
    "target": "ES6",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
