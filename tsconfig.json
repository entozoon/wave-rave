{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "target": "ES6",
    "strict": false,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "typeRoots": ["./node_modules/phaser/types"],
  "types": ["Phaser"]
}
